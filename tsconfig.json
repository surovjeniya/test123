{
  "compilerOptions": {
    "target": "es2015",
    "module": "NodeNext",
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": false,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "esModuleInterop": true
  }
}
